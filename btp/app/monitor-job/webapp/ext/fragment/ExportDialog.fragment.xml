<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m">
    <Dialog id="ExportDialogId" title="{i18n>export}" class="sapUiResponsiveContentPadding" beforeOpen=".onBeforeOpen" afterClose=".onAfterClose">
        <content>
            <Label id="labelExportTypeId" text="{i18n>exportType}" labelFor="exportType" />
            <Select id="exportType" autoAdjustWidth="false" width="100%" change="onChange" forceSelection="false" items="{
						path: '/ExportTypes',
						sorter: { path: 'order' }
					}">
                <core:Item id="exportItem" key="{code}" text="{title}" tooltip="{description} {legacy} {dateFrom}" />
            </Select>
            <ExpandableText id="exportDescription" text="{i18n>defaultDescription}" overflowMode="InPlace" />
            <Label id="labelLegacy" text="{i18n>labelLegacy}" labelFor="legacy" />
            <CheckBox id="legacy" text="{i18n>legacy}" />
            <Label id="labelDateFrom" text="{i18n>labelDateFrom}" labelFor="dateFrom"/>
            <DatePicker id="dateFrom" placeholder="{i18n>placeholderDateFrom}"/>
        </content>
        <beginButton>
            <Button id="exportOk" text="{i18n>OK}" press=".onOk" type="Emphasized" enabled="false" />
        </beginButton>
        <endButton>
            <Button id="exportCancel" text="{i18n>cancel}" press=".onCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
